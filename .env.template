# ELF Automations Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# LLM API Keys
# =============================================================================
ANTHROPIC_API_KEY=your_anthropic_api_key_here
OPENAI_API_KEY=your_openai_api_key_here
LANGSMITH_API_KEY=your_langsmith_api_key_here

# =============================================================================
# Database Configuration
# =============================================================================
POSTGRES_URL=postgresql://elfuser:elfpass@localhost:5432/elfautomations
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=elfautomations
POSTGRES_USER=elfuser
POSTGRES_PASSWORD=elfpass

# =============================================================================
# Redis Configuration
# =============================================================================
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379

# =============================================================================
# Kubernetes Configuration
# =============================================================================
KUBECONFIG=~/.kube/config
KUBERNETES_NAMESPACE=elf-automations

# =============================================================================
# Agent Gateway Configuration
# =============================================================================
AGENT_GATEWAY_URL=https://agentgateway.dev
AGENT_GATEWAY_API_KEY=your_agent_gateway_key_here

# =============================================================================
# MCP Server Configuration
# =============================================================================
MCP_SERVER_HOST=localhost
MCP_SERVER_PORT=8080

# =============================================================================
# Observability Configuration
# =============================================================================
PROMETHEUS_URL=http://localhost:9090
GRAFANA_URL=http://localhost:3000
JAEGER_URL=http://localhost:16686

# =============================================================================
# Development Configuration
# =============================================================================
DEBUG=true
LOG_LEVEL=INFO
ENVIRONMENT=development

# =============================================================================
# Security Configuration
# =============================================================================
SECRET_KEY=your_secret_key_here_change_in_production
JWT_SECRET_KEY=your_jwt_secret_key_here
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=30

# =============================================================================
# Agent Configuration
# =============================================================================
MAX_CONCURRENT_AGENTS=100
AGENT_TIMEOUT_SECONDS=300
AGENT_RETRY_ATTEMPTS=3
AGENT_BACKOFF_FACTOR=2
